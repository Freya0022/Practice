<%- include('../layouts/boilerplates') %>
    <h2 class="text-center">Edit <%= product.name %></h2>
    <div class="container">
        <div class="row row-cols-2 justify-content-md-center">
<form action="/edit/<%= category %>/<%= product.id %>" method="POST">
    <div class="mt-3">
    <label for="productname" class="form-label">Product Name:</label>
    <input type="text" name="name" class="form-control form-control-lg" id="productname" value="<%= product.name %>" required>
</div>
<div class="mt-3">
    <label for="bestbeforedate" class="form-label">Best Before:</label>
    <input type="date" name="bestBefore" class="form-control form-control-lg" id="bestbeforedate" value="<%= product.bestBefore %>" required>
</div>
<div class="mt-3">
    <button type="submit" class="btn btn-success">Update</button>
</div>
<div class="col-3 mt-3">
    <a href="/category/<%= category  %>">Back</a>
</div>
</form>
</div>

</div>

