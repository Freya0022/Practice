<%- include('../layouts/boilerplates') %>

<h1><%= category %></h1>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Product Name</th>
            <th scope="col">Best Before</th>
            <th scope="col">Remaining</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach((product, index) => { %>
        <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= product.name %></td>
            <td><%= moment(product.bestBefore).format('YYYY-MM-DD') %></td>
            <td><%= product.remain %></td>
            <td>
                <a href="/edit/<%= category %>/<%= product.id %>" class="btn btn-primary btn-sm">Edit</a>
                <form action="/delete/<%= category %>/<%= product.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
<div class="col-3">
    <a href="/add/<%= category %>" class="btn btn-success mt-3">Add New Product</a>
</div>


